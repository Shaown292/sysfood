<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/syssolution2"
        android:transitionName="logoImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtComName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="130dp"
        android:fontFamily="@font/oswaldbold"
        android:gravity="center"
        android:text="SYS FOOD"
        android:textAlignment="center"
        android:textColor="#FF6813"
        android:textSize="64sp"
        android:transitionName="logoText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgLogo" />

    <TextView
        android:id="@+id/txtSlogan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/oswaldlight"
        android:gravity="center"
        android:text="EAT MORE, GAIN MORE"
        android:textAlignment="center"
        android:textColor="#FF6813"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtComName" />


</androidx.constraintlayout.widget.ConstraintLayout>