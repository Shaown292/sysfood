<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"

    android:background="#fff"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20sp"
        >

    <ImageView
        android:id="@+id/imgLog"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/lock"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"

        />

    <TextView
        android:id="@+id/txtForget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/oswaldbold"
        android:gravity="center"
        android:text="Forget Password"
        android:textSize="32sp"
        android:transitionName="logoText" />

    <TextView
        android:id="@+id/txtCreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/oswaldlight"
        android:gravity="center"
        android:text="Enter your mail and we'll send you a link to reset your password"
        android:textSize="24sp"
        android:transitionName="logoText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">


        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_margin="20dp"
            android:textSize="24sp"
            android:ems="10"
            android:hint="E-Mail"
            android:inputType="textEmailAddress" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="200dp"

            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"


            android:background="@drawable/btn_custom"
            android:fontFamily="@font/oswaldlight"
            android:text="Submit"
            android:textColor="#fff"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_alreadyHaveAnAccount"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:background="#00000000"
            android:fontFamily="@font/oswaldlight"
            android:minHeight="28dp"
            android:text=" Back to log in"
            android:textColor="#000"
            android:textSize="16sp" />


    </LinearLayout>
    </LinearLayout>

</ScrollView>